{
  "name": "better-auth-invite",
  "author": "Massimiliano Mirra <hyperstruct@gmail.com>",
  "repository": "https://github.com/bard/better-auth-invite",
  "version": "0.1.0",
  "license": "MIT",
  "keywords": [
    "authentication",
    "better-auth",
    "invite",
    "invitation",
    "plugin"
  ],
  "type": "module",
  "scripts": {
    "format": "biome format --write src",
    "lint": "biome check --write src",
    "lint:unused-exports": "ts-unused-exports ./tsconfig.json --maxIssues=0",
    "test": "vitest run --coverage",
    "build": "tsc",
    "test:watch": "vitest watch --reporter=dot",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@better-auth-kit/tests": "^0.2.0",
    "@biomejs/biome": "1.9.4",
    "@tsconfig/node22": "^22.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.21",
    "@vitest/coverage-v8": "^1.1.0",
    "better-auth": "^1.2.8",
    "better-sqlite3": "^11.10.0",
    "dotenv-flow": "^4.1.0",
    "lefthook": "^1.5.5",
    "ts-unused-exports": "^10.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.18",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "better-auth": "^1.2.8"
  },
  "onlyBuiltDependencies": ["better-sqlite3"]
}
